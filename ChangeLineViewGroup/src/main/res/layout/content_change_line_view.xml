<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.secretlisa.views.ChangeLineViewActivity"
    tools:showIn="@layout/activity_change_line_view">
    <com.example.secretlisa.views.MyViewGroup
        android:id="@+id/my_view_group"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        app:horizontal_margin="30dp"
        app:vertical_margin="10dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="I am the first button"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="I am second"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="I am Third"/>
        <Button
            android:id="@+id/btn4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="I am Forth Button"/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="I am Fifth"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="I am Sixth Button"/>
    </com.example.secretlisa.views.MyViewGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@android:color/holo_blue_bright"/>
</LinearLayout>
